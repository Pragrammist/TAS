<script>
    $(function(){
        $("#search-group-index").keypress(function(event){
            var keycode = (event.keyCode ? event.keyCode : event.which);
            if(keycode == '13'){
                let groupToSearch = $("#search-group-index").val();
            
                
                let searchUrl = "/Admin/Students?group=" + groupToSearch

                window.location.href = searchUrl;    
            }
        });
    });
</script>


